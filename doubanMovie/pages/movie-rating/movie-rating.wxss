.rating{
  display:flex;
  flex-direction:row;
  align-items: center;
  margin:10rpx 0;
}
.rating-star{
  background-image:url("https://img3.doubanio.com/f/shire/b8f4c3672ef81106701071831e22422a745d3b74/pics/rating_icons/ic_rating_s.png");
  display:inline-block;
  width:55px;
  height:10px;
  background-repeat: no-repeat;
  background-size:cover;  
}
.rating-average{
  margin-left:10rpx;
  font-size:22rpx;
  height:30rpx;
